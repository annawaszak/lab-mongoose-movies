<h2>Edit a movie</h2>

<form action="/movies/{{_id}}/edit" method="POST">
{{#with movie}}
    <label for="title">Title: </label>
    <input id="title" type="text" name="title" value="{{title}}">
    <br><br>
    <label for="genre">Genre: </label>
    <input id="genre" type="text" name="genre" value="{{genre}}">
    <br><br>
    <label for="plot">Plot: </label>
    <input id="plot" type="text" name="plot" value="{{plot}}">
    <br><br>
    <label for="cast">Cast: </label>
    <br><br>
{{/with}}
    {{#each celebs}}
      <input id="{{_id}}" type="checkbox" name="cast" value="{{_id}}">
      <label for="{{_id}}">{{this.name}}</label>
      <br>
    {{/each}}

    <br>

    <button type="submit">Edit</button>

</form>
